<%= render 'title' %>

<div class="col-sm-8 col-sm-offset-2">
  <h1>
    Editing <%= @supergroup.name %>
  </h1>
  <%= render 'form' %>
</div>

<script type="text/javascript">
  var union_edit_ready = function() {
    $("#union_call_to_action").blur(function(){
      $("#call_to_action").html($("#union_call_to_action").val());
    });

    $("#union_explanation").blur(function(){
      $("#explanation").html($("#union_explanation").val());
    });

    $("#union_submissions_heading").blur(function(){
      $("#submissions_heading").html($("#union_submissions_heading").val());
    });

    $("#union_action1").blur(function(){
      $(".action1").html($("#union_action1").val());
    });

    $("#union_background_colour").blur(function(){
      $("#banner-styler").css("background-color", $("#union_background_colour").val());
      $("#submissions_heading").css("color", $("#union_background_colour").val());
    });

    $("#union_font_colour").blur(function(){
      $("#banner-styler").css("color", $("#union_font_colour").val());
      $("#explanation").css("color", $("#union_font_colour").val());
    });
  };

  $(document).ready(union_edit_ready);
  $(document).on('page:load', union_edit_ready);
</script>
