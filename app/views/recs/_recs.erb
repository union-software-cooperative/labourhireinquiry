
<% unless @recs.blank? %>
  <table class="table table-condensed table-striped box-shadow">
    <thead>
      <tr>
        <th></th>
        <th>Agreement / Expiry</th>
        <th>Company</th>
        <th>Union</th>
      </tr>
    </thead>

    <tbody>
      <% @recs.each do |rec| %>
        <tr class="">
          <td> <%= link_to "<span class='glyphicon glyphicon-paperclip'/>".html_safe, rec.attachment_url if rec.attachment_url%></td>
          <td  class="">
            <strong><%= I18n.l rec.end_date, :format => :long %></strong>
            <p><%= link_to rec.name, rec %></p>
          </td>
          <td><%= render rec.company if rec.company %></td>
          <td><%= render rec.union if rec.union%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
