<div class="row">
  <div class="col-sm-8 col-sm-offset-2">

    <div class="pull-right">
      <% if params[:locale] == 'zh' %>
        <%=link_to "english", locale: 'en' %>
      <% else %>
        <%=link_to "中文版", locale: 'zh' %>
      <% end %>
    </div>

    <hgroup>
      <h1><%=t("new_story_title")%></h1>
      <h4><%=t("new_story_subtitle")%></h4>
    </hgroup>

    <% if @union.union_rep.quote.url %>
      <div class="row">
        <blockquote>
          <p>
            <img src="<%=@union.union_rep.quote.url%>" />
            <%=@union.union_rep_quote%>
          </p>
          <footer><cite><%=@union.union_rep_cite%></cite></footer>
        </blockquote>
      </div>
    <% end %>

    <div style="margin-bottom: 3rem;">
      <h3 class='text-center'><%=t("new_story_explanation1")%></h3>

      <p class='text-center'>
        <%=t("new_story_explanation2")%></p>
    </div>

    <%= render 'form' %>
  </div>
</div>