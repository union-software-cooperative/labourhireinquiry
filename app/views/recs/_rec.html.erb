<blockquote>
	<%= profile_picture(rec.person) %>
	<%= rec.summary %><%=link_to "<span class=\"glyphicon glyphicon-pencil\"></span>".html_safe, rec_path(rec) if current_person %>
	<br />
	<video id="vid" class="<%=ios_video(rec.attachment)%>" style="<%='display:none;' unless rec.attachment.url %> width: 100%; margin-left: auto; margin-right: auto;" controls>
		<source id="vid-source" src="<%=rec.attachment.url%>"/>
		Your browser doesn't support HTML 5 video
	</video>

	<footer>
		<cite>
			<%= "#{rec.display_name}" %>
			<%=link_to "<span class=\"glyphicon glyphicon-pencil\"></span>".html_safe, edit_person_path(rec.person) if can_edit_union(rec.union) %>
		</cite> 
		</footer>
</blockquote>
